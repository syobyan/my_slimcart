
  {% extends 'templates/app.twig' %}

  {% block content %}
  <div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="panel panel-default">
				<div class="panel-heading">
					Personnel
				</div>
				<div class="panel-body">
				 <form action="{{ path_for('admin.signin')}}" method="post">

				 	<div class="form-group {{ errors.username ? 'has-error' : '' }}">
				 		<label for="username">Name</label>
				 		<input type="text" name="username" placeholder="username" class="form-control" value="{{ old.username }}">
				 		{% if errors.username %}
				 		<span class="help-block">{{ errors.username | first }}</span>
				 		{% endif %}
				 	</div>
				 	
				 	<div class="form-group {{ errors.password ? 'has-error' : '' }}">
				 		<label for="password">Passowerd</label>
				 		<input type="password" name="password" placeholder="password" class="form-control" value="{{ old.password }}" >
				 		{% if errors.password %}
				 		<span class="help-block">{{ errors.password | first }}</span>
				 		{% endif %}
				 		
				 	</div>
				 	<button type="submit" class="btn btn-difault">Sign in</button>
						{{ csrf.field | raw }}
				 </form>

				</div>

			</div>
		</div>
	</div>
   {% endblock %}