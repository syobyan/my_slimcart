
{% extends 'admin/templates/app.twig' %}




{% block content %}

<!-- Page Heading -->
<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">
		Profile
		</h1>
		
	</div>
</div>
<!-- /.row -->

<div class="panel panel-default">
	<div class="panel-heading">
		change password 
	</div>
	<div class="panel-body">
		<form action="{{ path_for('admin.password.change')}}" method="post">

			<div class="form-group {{ errors.password_old ? 'has-error' : '' }}">
				<label for="password">Current passowerd</label>
				<input type="password" name="password_old" id="password_old" placeholder="password_old" class="form-control" value="{{ old.password }}" >
				{% if errors.password_old %}
				<span class="help-block">{{ errors.password_old | first }}</span>
				{% endif %}
			</div>
			<div class="form-group {{ errors.password ? 'has-error' : '' }}">
				<label for="password">Passowerd</label>
				<input type="password" name="password" id="password" placeholder="password" class="form-control" value="{{ old.password }}" >
				{% if errors.password %}
				<span class="help-block">{{ errors.password | first }}</span>
				{% endif %}
			</div>

			<div class="form-group {{ errors.confirm_password ? 'has-error' : '' }}">
				<label for="password">Confirm Passowerd</label>
				<input type="password" name="confirm_password" id="confirm_password" placeholder="password" class="form-control" value="{{ old.confirm_password }}" >
				{% if errors.confirm_password %}
				<span class="help-block">{{ errors.confirm_password | first }}</span>
				{% endif %}
			</div>
			<button type="submit" class="btn btn-difault">Submit</button>
			{{ csrf.field | raw }}
		</form>

	</div>


</div>
{% endblock %}